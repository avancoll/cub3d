#             ███░░███░░███ ░███  ░███░░███   ██████░  ░███    ░███				#
#            ░███ ░░░  ░███ ░███  ░███ ░███  ░░░░░░███ ░███    ░███				#
#            ░███  ███ ░███ ░███  ░███ ░███ ███   ░███ ░███    ███ 				#
#            ░░██████  ░░████████ ████████ ░░████████  ██████████  				#
#             ░░░░░░    ░░░░░░░░ ░░░░░░░░   ░░░░░░░░  ░░░░░░░░░░   				#
# ============================================================================= #
                                                      
NAME		= cub3D

# ============================================================================= #

SRCS		= cub.c \

MLX			= mlx_handler.c \

# ============================================================================= #

BASE_SRC	= $(addprefix srcs/, $(SRCS))
MLX_SRC		= $(addprefix srcs/mlx/, $(MLX))

# ============================================================================= #

BASE_OBJS		= $(BASE_SRC:.c=.o)
MLX_OBJS		= $(MLX_SRC:.c=.o)

ALL_OBJS		= $(BASE_OBJS) $(MLX_OBJS)

# ============================================================================= #

LDFLAGS		= -lmlx -framework OpenGL -framework AppKit

# ============================================================================= #

CC			= gcc

CFLAGS		= -Wall -Wextra -Werror -I./includes/ -Imlx 

RM			= rm -f

.c.o:
	$(CC) $(CFLAGS) -Imlx -c $< -o ${<:.c=.o}

$(NAME):	$(ALL_OBJS)
	$(CC) $(CFLAGS) $(ALL_OBJS) $(LDFLAGS) -o $(NAME)

# ============================================================================= #

all:	$(NAME)

clean:
	$(RM) $(ALL_OBJS)

fclean:	clean
	$(RM) $(NAME)

re:	fclean all

.PHONY:	all clean fclean re

# ============================================================================= #
